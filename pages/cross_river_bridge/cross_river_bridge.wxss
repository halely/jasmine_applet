/* pages/cross_river_bridge/cross_river_bridge.wxss */
.container {
  padding: 26rpx;
  box-sizing: border-box;
}

.main {
  overflow: auto !important;
}

.carTypeBox {
  display: flex;
  border-radius: 16rpx 16rpx 0 0;
  overflow: hidden;
  padding: 16rpx 40rpx;
  justify-content: space-around;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.carTypeBox .carTypeItem {
  width: 40%;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 80rpx;
}

.carTypeBox .carTypeItem .carTypeName {
  font-size: 32rpx;
  font-weight: 400;
  color: #666666;
  line-height: 44rpx;
  margin-right: 14rpx;
}

.carTypeBox .carTypeItem .carTypeNum {
  font-size: 28rpx;
  font-weight: 600;
  color: #999999;
  line-height: 40rpx;
  padding: 0 22rpx;
  background-color: #F4F4F4;
  border-radius: 8rpx;
}

.carTypeItem.select {
  background-color: #1677FE;
}

.carTypeItem.select .carTypeName {
  color: #ffffff;
}

.carTypeItem.select .carTypeNum {
  background-color: rgba(255, 119, 0, 0.12);
  color: #FF7700;
}

.channelInfoBox {
  background-color: #ffffff;
  padding: 40rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}
.limitInfoBox{
  flex: 1;
  overflow: auto;
  padding: 10rpx 40rpx;
}

.channelInfoBox .clickTitleBox {
  display: flex;
  background-color: rgba(22, 119, 254, 0.08);
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
  align-items: center;
}

.channelInfoBox .clickTitleBox image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.refresBox {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
  line-height: 24rpx;
}

.refresBox image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.bridgeBox {
  width:308px;
  margin: 0 auto;
  margin-top: 120rpx;
  position: relative;
}

.bridgebg,
.bridgebody {
  height: 300rpx;
  width: 308px;
}

.bridgeTip {
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  flex-direction: column;
}

.bridgeTip text {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}

.bridgeTip text::before {
  width: 16rpx;
  height: 16rpx;
  content: '';
  display: block;
  background-color: #FF7700;
  margin-right: 8rpx;
  border-radius: 50%;
}

.bridgeTip text:first-child::before {
  background-color: #07C160;
}

.bridgebody {
  position: absolute;
  top: 0;
  left: 0;
}

.bridgeItem {
  display: inline-flex;
  position: absolute;
}

.bridgeItem .nodeBox {
  display: inline-flex;
  align-items: center;
}

.bridgeItem .nodeBox .nodeImg {
  width: 6px;
  height: 34px;
}

.bridgeItem>text {
  color: #07C160;
  line-height: 20px;
  display: inline-block;
  width: 45px;
  font-size: 26rpx;
  text-align: center;
  position: absolute;
  padding: 2rpx 16rpx;
  border-radius: 24rpx;
}

.bridgeItem.seleced>text {
  background-color: rgba(7, 193, 96, 0.12);
}

.bridgeItem.seleced>text.error {
  background-color:rgba(255, 119, 0, 0.12);
}

.bridgeItem>text.error {
  color: #FF7700;
}

.limitInfo {
  margin-top: 80rpx;
  color: #000000;
  line-height: 22px;
}

.limitInfo .boxTitle {
  display: flex;
  font-size: 16px;
  justify-content: center;
  margin-bottom: 26rpx;
}

.boxTitle>text:first-child {
  color: #FF7700;
  margin-right: 20rpx;
}

.onlineTitle {
  display: flex;
  justify-content: center;
  font-size: 12px;
  font-weight: 400;
  color: #666666;
  line-height: 17px;
  align-items: center;
  margin-top: 30px;
}

.onlineTitle image {
  width: 12px;
  height: 12px;
  margin-right: 8rpx;
}

.normalcommunication {
  font-size: 20px;
  font-weight: 500;
  color: #07C160;
  margin-top: 30px;
  display: block;
  text-align: center;
}