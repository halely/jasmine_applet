/* pages/cross_river_bridge/cross_river_bridge.wxss */
.container {
  padding: 26rpx;
  box-sizing: border-box;
}

.carTypeBox {
  display: flex;
  border-radius: 8px 8px 0 0;
  overflow: hidden;
}

.carTypeBox .carTypeItem {
  width: 50%;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #E6E6E6;
}

.carTypeBox .carTypeItem .carTypeName {
  font-size: 16px;
  font-weight: 400;
  color: #666666;
  line-height: 22px;
  margin-right: 7px;
}

.carTypeBox .carTypeItem .carTypeNum {
  font-size: 14px;
  font-weight: 600;
  color: #999999;
  line-height: 20px;
  padding: 0 11px;
  background-color: #F4F4F4;
  border-radius: 8rpx;
}

.carTypeItem.select {
  background-color: #ffffff;

}

.carTypeItem.select .carTypeName {
  color: #1677FE;
}

.carTypeItem.select .carTypeNum {
  background-color: rgba(255, 32, 32, 0.15);
  color: #FF2020;
}

.channelInfoBox {
  background-color: #ffffff;
  padding: 40rpx;
  box-sizing: border-box;
}

.refresBox {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #666666;
  line-height: 17px;
}

.refresBox image {
  width: 16px;
  height: 16px;
  margin-right: 6px;
}

.bridgeBox {
  width: 308px;
  margin: 0 auto;
  margin-top: 60px;
  position: relative;
}

.bridgebg,
.bridgebody {
  height: 300rpx;
  width: 308px;
}

.bridgebody {
  position: absolute;
  top: 0;
  left: 0;
}

.bridgeItem {
  display: inline-flex;
  position: absolute;
}

.bridgeItem .nodeBox {
  display: inline-flex;
  align-items: center;
}

.bridgeItem .nodeBox .nodeImg {
  width: 6px;
  height: 34px;
}

.bridgeItem>text {
  color: #07C160;
  line-height: 20px;
  display: inline-block;
  width: 45px;
  font-size: 26rpx;
  text-align: center;
  position: absolute;
}

.bridgeItem>text.error {
  color: #FF2020;
}

.limitInfo {
  margin-top: 80rpx;
  color: #000000;
  line-height: 22px;
}

.limitInfo .boxTitle {
  display: flex;
  font-size: 16px;
  justify-content: center;
  margin-bottom: 26rpx;
}

.boxTitle>text:first-child {
  color: #FF2020;
  margin-right: 20rpx;
}

.onlineTitle {
  display: flex;
  justify-content: center;
  font-size: 12px;
  font-weight: 400;
  color: #666666;
  line-height: 17px;
  align-items: center;
  margin-top: 30px;
}

.onlineTitle image {
  width: 12px;
  height: 12px;
  margin-right:8rpx;
}