/* pages/traffic_info/traffic_info.wxss */
.trafficHeadBox {
  padding: 40rpx 56rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #ffffff;
  box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.1);
}

.trafficHeadItem {
  font-size: 14px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 20px;
}

.trafficHeadItem image {
  width: 100rpx;
  height: 94rpx;
}

/* 附近路况 */

.trafficCondition {
  padding: 24rpx 40rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.nearBox {
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: 500;
  color: #000000;
  line-height: 25px;
}

.nearBox image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

.choose_high_speed {
  display: flex;
  align-items: center;
  color: #999999;
}

.choose_high_speed::after {
  display: block;
  content: '';
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #2AC172;
  margin: 0 0 0 12rpx;
}

/* 地图 */

.accidentMap {
  width: 100%;
  height: 100%;
}

.main {
  position: relative;
}

/* 底部菜单 */
.map_marker_box {
  width: 100%;
  min-height: 100px;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.12);
  border-radius: 4px;
  /* padding: 32rpx 40rpx; */
  box-sizing: border-box;
  z-index: 99;
}

.accidentInfoBox {
  width: 100%;
  padding: 32rpx 40rpx;
  box-sizing: border-box;
}
.commoncloseBox{
  height: 48rpx;
  position: relative;
}
.commonclose {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:28rpx;
  right: 40rpx;
}

.marker_info_head {
  display: flex;
  padding: 0 0 40rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
}

.marker_info_main {
  flex: 1;
  display: flex;
  font-size: 14px;
  color: #666666;
  line-height: 20px;
}

.marker_info_head .close {
  width: 40rpx;
  height: 40rpx;
}

.marker_info_main image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 28rpx;
}

.marker_info_title .info_title {
  font-size: 18px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 25px;
}

.marker_info_time {
  display: flex;
  justify-content: space-around;
  margin-top: 32rpx;
}

.info_time_item text:first-child {
  font-size: 16px;
  font-weight: bold;
  color: #333333;
  line-height: 22px;
  margin-bottom: 30rpx;
}

/* 右侧菜单 */
.marker_type_box {
  width: 120rpx;
  height: 548rpx;
  background-color: #ffffff;
  top: 40rpx;
  right: 0;
  position: absolute;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.12);
  border-radius: 4px;
  padding: 40rpx 0;
  box-sizing: border-box;
  justify-content: space-between;
}

.marker_type_item {
  display: flex;
}

.marker_type_item image {
  width: 60rpx;
  height: 60rpx;
}

.marker_type_item.cancel image {
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: progid:DXImageTransform.Microsoft.BasicImage(grayscale=1);
  opacity: 0.5;
}

.marker_type_item text {
  font-size: 11px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 16px;
  margin-top: 8rpx;
}