  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #2AC172;
  margin: 0 0 0 12rpx;
}

.management {
  font-weight: bold;
}

.management.green {
  color: #12A86D;
}

.path_item_text .path_item_time {
  font-size: 24rpx;
  color: #999999;
  line-height: 17px;
  margin-top: 12rpx;
}

/* 选择功能 */

.checkbox_box {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.checkbox_box>text {
  margin-left: 16rpx;
}

.foot {
  align-items: center;
  justify-content: space-between;
  padding: 48rpx 32rpx;
  box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.07);
}

.deleteText {
  font-size: 16px;
  color: #999999;
}
/* 选择项 */
.collectionList_item{
  display: flex;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.collectionList_item high_speed_item,.collectionList_item toll_station_item,.collectionList_item service_area_item{
  flex: 1;
 
}
.collectionList_item .checkbox_box{
  margin: 0 0 0 32rpx;
}