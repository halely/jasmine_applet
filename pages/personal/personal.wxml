<!--pages/personal/personal.wxml-->
<view class="container">
  <view class="main">
    <view class="myInfo">
      <view class="head_portrait"></view>
      <view class="loginBut" hidden="{{true}}">立即登录</view>
      <view class="loginBut">浮生</view>
    </view>
    <view class="my_collection_box">
      <view class="title">我的收藏</view>
      <view class="collection_type">
        <view class="collection_item direction_column">
          <image class="item_icon" src="/img/collection_toll_station.png"></image>
          <view class="item_title">高速</view>
        </view>
        <view class="collection_item direction_column">
          <image class="item_icon" src="/img/collection_service_area.png"></image>
          <view class="item_title">收费站</view>
        </view>
        <view class="collection_item direction_column">
          <image class="item_icon" src="/img/collection_high_speed.png"></image>
          <view class="item_title">服务区</view>
        </view>
        <view class="collection_item direction_column">
          <image class="item_icon" src="/img/collection_route.png"></image>
          <view class="item_title">路线</view>
        </view>
      </view>
    </view>
    <view class="my_service_box">
      <view class="title">精选服务</view>
      <view class="collection_type">
        <view class="collection_item direction_column">
          <view class="item_title">收费站</view>
          <image class="item_icon" src="/img/tollbooth_switch.png"></image>
        </view>
        <view class="collection_item direction_column">
          <view class="item_title">服务区</view>
          <image class="item_icon" src="/img/service_area_entrance.png"></image>
        </view>
        <view class="collection_item direction_column">
          <view class="item_title">车辆限行</view>
          <image class="item_icon" src="/img/restrictions.png"></image>
        </view>
        <view class="collection_item direction_column">
          <view class="item_title">过江通道</view>
          <image class="item_icon" src="/img/bridge.png"></image>
        </view>
      </view>
    </view>
    <view class="jump_box">
      <view class="jump_item" hover-class="viewHove" bindtap="PhoneCall">
        <image src="/svg/customer_service.svg"></image>
        <text>联系客服</text>
        <image src="/svg/next_step.svg"></image>
      </view>
      <button open-type="feedback" class="jump_item" hover-class="viewHove">
        <image src="/svg/opinion.svg"></image>
        <text>意见反馈</text>
        <image src="/svg/next_step.svg"></image>
      </button>
      <view  class="jump_item" hover-class="viewHove">
        <image src="/svg/about.svg"></image>
        <text>关于我们</text>
        <image src="/svg/next_step.svg"></image>
      </view>
    </view>
  </view>
</view>