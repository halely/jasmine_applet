<!--pages/personal/personal.wxml-->
<view class="container">
  <view class="main">
    <view class="myInfo">
      <block wx:if="{{userInfo}}">
        <image class="head_portrait" src="{{userInfo.avatarUrl}}" />
        <view class="loginBut">
         <text>{{userInfo.nickName}}</text>
         <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" class="phoneBox" bindtap="">绑定手机号</button>
        </view>
      </block>
      <block wx:else>
        <image class="head_portrait" src="/img/noImge.png" />
        <view bindtap="loginView" class="loginBut">请点击登录</view>
      </block>
    </view>
    <view class="my_collection_box">
      <view class="title">我的收藏</view>
      <view class="collection_type">
        <view bindtap="collectionView" data-code="1" class="collection_item direction_column">
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-11-08/collection_toll_station.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1645003837&signature=5cxwpf0hz4sEAeS6WzRq%2FRisqODxl2rSBHRYOzQaN%2Fs%3D"></image>
          <view class="item_title">高速</view>
        </view>
        <view bindtap="collectionView" data-code="2" class="collection_item direction_column">
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-11-08/collection_service_area.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1645003836&signature=khLnpCFZpbEsGNoXNRmOW1pmaAAHU0565iLSSBcKGTE%3D"></image>
          <view class="item_title">收费站</view>
        </view>
        <view bindtap="collectionView" data-code="3" class="collection_item direction_column">
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-11-08/collection_high_speed.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1645003836&signature=d2zZSS76cmvakHjU2CrIOd7qq4IbZVdMna%2BiI%2FPFbm8%3D"></image>
          <view class="item_title">服务区</view>
        </view>
        <view bindtap="collectionView" data-code="4" class="collection_item direction_column">
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-11-08/collection_route.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1645003836&signature=R8ys402hBhIZSFZbciUJJJRDuQo1Rdym%2Bw6N3brvCpg%3D"></image>
          <view class="item_title">路线</view>
        </view>
      </view>
    </view>
    <view class="my_service_box">
      <view class="title">精选服务</view>
      <view class="collection_type">
        <view class="collection_item direction_column" data-path="toll_station" bindtap="entranceClick">
          <view class="item_title">收费站</view>
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-10-21/tollbooth_switch.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1643511311&signature=Al%2BBHmsBW3WcDQIkVz05oFhBhDTynPFIPepiId47Q60%3D"></image>
        </view>
        <view class="collection_item direction_column" data-path="serviceArea" bindtap="entranceClick">
          <view class="item_title">服务区</view>
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-10-21/service_area_entrance.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1643511310&signature=9qAlPalix1o8SZCqhZH4hLv6CgxJXyiIzTzH%2FQHx0%2Fw%3D"></image>
        </view>
        <view class="collection_item direction_column"  data-path="restrictions" bindtap="entranceClick">
          <view class="item_title">车辆限行</view>
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-10-21/restrictions.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1643511310&signature=i%2FlbEz4DTgYtBOW8jZyXiRt4KCdRcFGl4WmaBkuNtjw%3D"></image>
        </view>
        <view class="collection_item direction_column" data-path="cross_river_bridge" bindtap="entranceClick">
          <view class="item_title">过江通道</view>
          <image class="item_icon" src="https://sh1a.qingstor.com/sgx-96777-pro/2021-11-08/bridge.png?access_key_id=DIHFNGPFGVICICBJSFKX&expires=1645003836&signature=E510iInl0utV6aBc3eRWUT5vLOCqcAb6JXCpDGaH1GQ%3D"></image>
        </view>
      </view>
    </view>
    <view class="jump_box">
      <view class="jump_item" hover-class="viewHove" bindtap="PhoneCall">
        <image src="/svg/customer_service.svg"></image>
        <text>联系客服</text>
        <image src="/svg/next_step.svg"></image>
      </view>
      <button open-type="feedback" class="jump_item" hover-class="viewHove">
        <image src="/svg/opinion.svg"></image>
        <text>意见反馈</text>
        <image src="/svg/next_step.svg"></image>
      </button>
      <view class="jump_item" bindtap="aboutView" hover-class="viewHove">
        <image src="/svg/about.svg"></image>
        <text>关于我们</text>
        <image src="/svg/next_step.svg"></image>
      </view>
    </view>
    <view class="loginout" bindtap="loginout" wx:if="{{userInfo}}" hover-class="viewHove">退出登录</view>
  </view>
</view>