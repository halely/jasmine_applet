/* pages/high_speed_map/high_speed_map.wxss */
.restrictionItem {
  width: 100%;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.restrictionItem .item_head {
  display: flex;
}

.restrictionItem .item_head .highwayBox {
  width: 53px;
  height: 53px;
  position: relative;
  margin: 0 40rpx 0 0;
  flex-shrink: 0;
}

.restrictionItem .item_head .highwayBox image {
  width: 100%;
  height: 100%;
}

.HighwayText {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  color: #ffffff;
  font-size: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
}

.HighwayText text:first-child {
  font-size: 13px;
  margin: 28rpx 0 2rpx 0;
}

.basicInfo {
  flex: 1;
  font-size: 16px;
  font-weight: 500;
  color: #0f0f0f;
  line-height: 15px;
  padding-bottom: 30rpx;
  overflow: hidden;
}

.infoHead {
  display: flex;
  align-items: center;
}

.infoTitle {
  flex: 1;
  overflow: hidden;
}

.focus_on {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  flex-shrink: 0;
  padding: 6rpx 14rpx;
  background-color: #F1F1F1;
  border-radius: 18rpx;
}

.focus_on.selected {
  color: #FF7700;
}

.focus_on image {
  display: inline-flex;
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.basicInfo .eventText {
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
  margin-top: 12rpx;
}

.basicInfo .eventText>text {
  font-size: 32rpx;
  color: #FF2D2D;
}

.basicInfo .eventText>text.success {
  color: #07C160;
}

.item_foot {
  display: flex;
  align-items: center;
}

.accident {
  flex: 1;
}



.accidentItem {
  font-size: 24rpx;
  display: inline-block;
  color: #666666;
  line-height: 34rpx;
  padding: 4rpx 16rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  margin: 10rpx 24rpx 10rpx 0;
}

.accidentItem.error {
  color: #FF2D2D;
  background-color: rgba(212, 0, 1, 0.08);
}

.accidentItem.success {
  color: #07C160;
  background: rgba(7, 193, 96, 0.12);
}

/* 地图 */

.accidentMap {
  width: 100%;
  height: 100%;
}

.main {
  position: relative;
}

/* 底部菜单 */
.map_marker_box {
  width: 100%;
  min-height: 100px;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.12);
  border-radius: 4px;
  padding: 32rpx 40rpx;
  box-sizing: border-box;
  z-index: 99;
}

.marker_info_head {
  display: flex;
  padding: 0 0 40rpx 0;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
}

.marker_info_main {
  flex: 1;
  display: flex;
  font-size: 14px;
  color: #666666;
  line-height: 20px;
}

.marker_info_head .close {
  width: 40rpx;
  height: 40rpx;
}

.marker_info_main image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 28rpx;
}

.marker_info_title .info_title {
  font-size: 18px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #000000;
  line-height: 25px;
}

.marker_info_time {
  display: flex;
  justify-content: space-around;
  margin-top: 32rpx;
}

.info_time_item text:first-child {
  font-size: 16px;
  font-weight: bold;
  color: #333333;
  line-height: 22px;
  margin-bottom: 30rpx;
}

/* 右侧菜单 */
.marker_type_box {
  width: 120rpx;
  height: 548rpx;
  background-color: #ffffff;
  top: 40rpx;
  right: 0;
  position: absolute;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.12);
  border-radius: 4px;
  padding: 40rpx 0;
  box-sizing: border-box;
  justify-content: space-between;
}

.marker_type_item {
  display: flex;
}

.marker_type_item image {
  width: 60rpx;
  height: 60rpx;
}

.marker_type_item.cancel image {
  -webkit-filter: grayscale(100%);
  -moz-filter: grayscale(100%);
  -o-filter: grayscale(100%);
  filter: grayscale(100%);
  filter: progid:DXImageTransform.Microsoft.BasicImage(grayscale=1);
  opacity: 0.5;
}

.marker_type_item text {
  font-size: 11px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 16px;
  margin-top: 8rpx;
}