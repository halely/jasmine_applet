/* pages/path_plan/path_plan.wxss */
.container {
  font-family: PingFangSC-Medium, PingFan;
}

.path_search_box {
  width: 100%;
  background-color: #fff;
  padding:20rpx 36rpx 36rpx 36rpx;
  box-sizing: border-box;
  /* box-shadow: 0px 2px 6px 0px rgba(0, 0, 0, 0.1); */
}

.path_search_body {
  width: 100%;
  height: 180rpx;
  background: #F6F6F6;
  border-radius: 16rpx;
  display: flex;
  padding: 24rpx;
  box-sizing: border-box;
  align-items: center;
}

.path_search_steps {
  padding: 14rpx 8rpx;
  box-sizing: border-box;
  height: 100%;
}

.step_annulus {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #12A86D;
  display: flex;
  justify-content: center;
  align-items: center;
}

.step_annulus::after {
  content: "";
  display: block;
  width: 100%;
  height: 100%;
  transform: scale(0.5);
  border-radius: 50%;
  background-color: #fff;
}

.step_annulus.orange {
  background-color: #FF7700;
}

.step_line {
  width: 0;
  border-left: 4rpx dashed #BEBEBE;
  flex: 1;
  margin: 8rpx 0;
}

.path_search_main {
  flex: 1;
  padding: 0 20rpx;
}

.path_search_origin,
.path_search_destination {
  font-size: 16px;
  font-weight: 500;
  line-height: 22px;
}

.septalLine {
  width: 100%;
  height: 2rpx;
  background-color: #E2E2E2;
  margin: 22rpx 0;
}

.path_search_switch {
  width: 48rpx;
  height: 48rpx;
}

.main {
  margin: 20rpx 0 0 0;
  background-color: #fff;
}

/* 历史记录和我的收藏样式 */
.path_tab_box {
  height: 100%;
  width: 100%;
}

.path_tab_box>view {
  width: 100%;
}

.path_tab_head {
  padding: 0 48rpx;
  box-sizing: border-box;
}

.path_tab_title_box {
  display: flex;
  font-size: 36rpx;
  font-weight: 500;
  color: #999999;
  line-height: 50rpx;
  justify-content: space-around;
  padding-top: 28rpx;
  border-bottom: 1rpx solid #F5F5F5;
}

.path_tab_title.selected {
  color: #000000;
}

.path_tab_title.selected::after {
  content: '';
  width: 64rpx;
  height: 8rpx;
  display: block;
  margin-top: 16rpx;
  background-color: #2AC172;
  border-radius: 8rpx;
}

.path_tab_main {
  flex: 1;
  overflow: hidden;
}

.path_tab_pane {
  flex: 1;
  padding: 10rpx 48rpx;
  box-sizing: border-box;
  overflow: auto;
  width: 100%;
}

.path_item {
  width: 100%;
  display: flex;
  align-items: center;
}

.path_item .path_item_icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 24rpx;
}

.path_item .path_item_text {
  font-size: 32rpx;
  font-weight: 400;
  color: #333333;
  line-height: 44rpx;
  flex: 1;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.removetext {
  font-size: 14px;
  font-weight: 400;
  color: #999999;
  display: inline-block;
  line-height: 20px;
  padding: 12rpx 80rpx;
  border: 1rpx solid #E2E2E2;
  border-radius: 18rpx;
  margin: 80rpx 0;
}

.path_tab_conditions {
  width: calc(100% - 36px);
  display: flex;
  justify-content: space-between;
  margin: 20rpx 36rpx;
  padding: 18rpx 44rpx;
  box-sizing: border-box;
  background-color: #F6F6F6CC;
  border-radius:12rpx;
}

.conditions_time {
  display: flex;
  align-items: center;
}

.conditions_time::after {
  display: block;
  content: '';
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid #2AC172;
  margin: 0 0 0 12rpx;
}

.management {
  font-weight: bold;
}

.management.green {
  color: #12A86D;
}

.path_item_text .path_item_time {
  font-size: 24rpx;
  color: #999999;
  line-height: 17px;
  margin-top: 12rpx;
}

/* 选择功能 */

.checkbox_box {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}

.checkbox_box>text {
  margin-left: 16rpx;
}

.foot {
  align-items: center;
  justify-content: space-between;
  padding: 48rpx;
}

.deleteText {
  font-size: 16px;
  color: #999999;
}