/* pages/store_info/store_info.wxss */
.main {
  display: flex;
}

.store_menu {
  width: 80px;
  height: 100%;
  flex-shrink: 0;
  background-color: #F5F5F5;
}

.menu_details {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 12px 4px 12px 16px;
  box-sizing: border-box;
  overflow: hidden;
}

.store_menu .menuItem {
  width: 100%;
  height: 44px;
  font-size: 14px;
  color: #666666;
  display: flex;
  justify-content: center;
  line-height: 44px;
  background-color: #F5F5F5;
  align-items: center;

}
.store_menu .menuItem  image{
  width: 16px;
  height: 16px;
}
.store_menu .menuItem.selected {
  background-color: #ffffff;
  color: #000000;
  position: relative;
}

.menu_details .detail_title {
  font-size: 14px;
  color: #333333;
  line-height: 20px;
  padding-bottom: 12px;
  border-bottom: 1px solid #F5F5F5;
  margin-bottom: 20rpx;
}

.detailBody {
  flex: 1;
  overflow: hidden;
}
.detailBody scroll-view{
  height: 100%;
}
.detailItemBox {
  display: flex;
  margin-bottom: 16rpx;
}

.detailItemBox image {
  width: 80px;
  height: 80px;
  margin-right: 20rpx;
}

.detailItemBox .detailItemInfo {
  flex: 1;
  padding-right: 10px;
  overflow: hidden;
}

.detailItemInfo .foodName {
  font-size: 16px;
  font-weight: 500;
  color: #333333;
  line-height: 22px;
}

.detailItemInfo .evaluate {
  font-size: 12px;
  color: #999999;
  line-height: 17px;
  margin-top: 16rpx;
}

.detailItemInfo .evaluate text {
  margin-right: 20rpx;
}

.detailItemInfo .price {
  font-size: 14px;
  font-weight: 500;
  color: #F52202;
  line-height: 20px;
  padding-top: 17px;
  display: block;
}