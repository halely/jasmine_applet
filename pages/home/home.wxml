      <block hidden="true">
        <view class="serviceAreaItem" bindtap="serviceAreaInfo">
            <view class="item_head">
              <image class="serviceAreaImg" src="/img/serviceAreaImg.png"></image>
              <view class="serviceAreaInfo">
                <view class="serviceAreaInfo_head">
                  翠屏山服务区
                  <text>8.70km</text>
                </view>
                <view class="serviceAreaInfo_main">
                  <view class="serviceAreaInfo_main_item">
                    <image src="/img/parking.png"></image>
                    <view class="parkingInfo">
                      <view class="parkingInfo_item">
                        <label>剩余车位</label>
                        <text>150</text>
                      </view>
                      <view class="parkingInfo_item">
                        <label>空余厕位</label>
                        <text>30</text>
                      </view>
                    </view>
                  </view>
                  <view class="serviceAreaInfo_main_item">
                    <image src="/img/cheer.png"></image>
                    <view class="cheerInfo">
                      <view class="cheerItem">92#</view>
                      <view class="cheerItem">95#</view>
                      <view class="cheerItem">98#</view>
                      <view class="cheerItem diesel">0#</view>
                      <view class="cheerItem diesel">10#</view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
            <view class="item_foot">
              <text class="perCapita">￥50</text>
              <view class="recommendBox">
                <text>【推荐】老乡鸡·肥西老母鸡汤优惠服务</text>
                <view class="sales_status">
                  <text>日销 15</text>
                  <text>月售 300</text>
                </view>
              </view>
            </view>
          </view>
      </block>
      </view>
    </view>
  </view>
</view>