<!--pages/home/home.wxml-->
<view class="container">
  <view class="Home_nav">
    <view class="placeBox" style='margin-top: {{height}}rpx'>
      <image class="positionImg" src="/img/positioning.png"></image>
      <text>{{city||'获取当前位置'}}</text>
    </view>
    <view class="evaluate">点击评价</view>
    <image class="Home_nav_bg" src="/img/HomeBg.png"></image>
  </view>
  <view class="main">
    <view class="entranceBox">
      <view class="entranceItem" data-path="restrictions" bindtap="entranceClick" >
        <view class="entranceTitle">
          <text>车辆限行</text>
          <text>道路限行信息</text>
        </view>
        <image src="/img/restrictions.png"></image>
      </view>
      <view class="entranceItem" data-path="cross_river_bridge" bindtap="entranceClick">
        <view class="entranceTitle">
          <text>过江大桥</text>
          <text>道路限行信息</text>
        </view>
        <image src="/img/bridge.png"></image>
      </view>
      <view class="entranceItem" data-path="serviceArea" bindtap="entranceClick">
        <view class="entranceTitle">
          <text>收费站开关</text>
          <text>收费站开关信息</text>
        </view>
        <image src="/img/tollbooth_switch.png"></image>
      </view>
      <view class="entranceItem" data-path="toll_station" bindtap="entranceClick">
        <view class="entranceTitle">
          <text>服务区</text>
          <text>商铺美食推荐</text>
        </view>
        <image src="/img/service_area_entrance.png"></image>
      </view>
    </view>
    <view class="tab_box">
      <view class="tabHead">
        <view class="tab_item selected">附近收费站</view>
        <view class="tab_item">附近服务区</view>
        <view class="moreBut">
          <text>更多</text>
        </view>
      </view>
      <view class="tabMain">
