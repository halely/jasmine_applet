/* pages/restrictions/restrictions.wxss */
.searchBox {
  padding-top: 24rpx;
}

.restrictionItem {
  width: 100%;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.restrictionItem .item_head {
  display: flex;
}

.restrictionItem .item_head .highwayBox {
  width: 48px;
  height: 48px;
  position: relative;
  margin: 0 40rpx 0 0;
}

.restrictionItem .item_head .highwayBox image {
  width: 100%;
  height: 100%;
}

.HighwayText {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  color: #ffffff;
  font-size: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
}

.HighwayText text:first-child {
  font-size:13px;
  margin: 28rpx 0 2rpx 0;
}

.basicInfo {
  flex: 1;
  font-size: 16px;
  font-weight: 500;
  color: #0f0f0f;
  line-height:15px;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}

.LimitPath {
  background: #fcf0f0;
  color: #FF2020;
  display: inline-block;
  padding: 4rpx 18rpx;
  margin-top: 18rpx;
  line-height: 20px;
  font-size: 12px;
}

.item_body .infoItem {
  display: flex;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  line-height: 20px;
  color: #080808;
  font-weight: 500;
  margin-top: 16rpx;
}

.item_body .infoItem label {
  color: #666666;
  font-weight: 400;
  flex-shrink: 0;
}