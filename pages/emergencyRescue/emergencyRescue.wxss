.container {
  background-color: #ffffff;
}

.main {
  position: relative;
}

#mymap {
  width: 100%;
  height: 100%;
}

.addreeInfo {
  padding: 72rpx 36rpx 0 36rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  box-shadow: 0px -1px 2px 0px rgba(0, 0, 0, 0.2);
  border-radius: 30rpx 30rpx 0 0;
  transform: translate(0, -20px);
  position: relative;
}

