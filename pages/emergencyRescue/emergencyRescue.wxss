.InfoHead {
  font-size: 32rpx;
  color: #12A86D;
  margin-bottom: 24rpx;
}

.infoBody {
  display: flex;
  justify-content: space-between;
}

.infoItem {
  width: 32%;
  padding: 20rpx 0 10rpx;
  background: #F5F5F5;
  text-align: center;
}

.infoItem text:first-child {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666;
  line-height: 34rpx;
  margin-bottom: 10rpx;
}

button:not([size=mini]).nextStep {
  width: 80%;
  border-radius: 20px;
  margin: 80rpx 0 40rpx;
  margin-left: 10%;
}

/* 缩放改变 */
.scaleBox {
  position: absolute;
  right: 24rpx;
  bottom: 80rpx;
  width: 40px;
  box-shadow: 0px 0px 4px 0px rgba(0, 0, 0, 0.2);
  background-color: #fff;
  border-radius: 8rpx;
}

.scaleBox view {
  padding: 8rpx 0;
  width: 100%;
  font-size: 25px;
  text-align: center;
}