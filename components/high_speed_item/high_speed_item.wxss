/* pages/high_speed_road/high_speed_road.wxss */
.restrictionItem {
  width: 100%;
  padding: 40rpx 32rpx 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.restrictionItem .item_head {
  display: flex;
}

.restrictionItem .item_head .highwayBox {
  width: 48px;
  height: 48px;
  position: relative;
  margin: 0 40rpx 0 0;
  flex-shrink: 0;
}

.restrictionItem .item_head .highwayBox image {
  width: 100%;
  height: 100%;
}

.HighwayText {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  color: #ffffff;
  font-size: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-weight: bold;
}

.HighwayText text:first-child {
  font-size: 13px;
  margin: 28rpx 0 2rpx 0;
}

.basicInfo {
  flex: 1;
  font-size: 16px;
  font-weight: 500;
  color: #0f0f0f;
  line-height: 15px;
  padding-bottom: 30rpx;
  overflow: hidden;
}

.infoHead {
  display: flex;
  align-items: center;
}

.infoTitle {
  flex: 1;
  overflow: hidden;
}

.next_step_svg_inner {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 40rpx;
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.next_step_svg_inner image {
  display: inline-flex;
  width: 40rpx;
  height: 40rpx;
}

.basicInfo .eventText {
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
  margin-top: 12rpx;
}

.basicInfo .eventText>text {
  font-size: 32rpx;
  color: #FF2D2D;
}

.basicInfo .eventText>text.success {
  color: #07C160;
}

.accidentItem {
  font-size: 24rpx;
  display: inline-block;
  color: #666666;
  line-height: 34rpx;
  padding: 4rpx 16rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  margin-right: 24rpx;
  margin-bottom: 18rpx;
}

.accidentItem.error {
  color: #FF2D2D;
  background-color: rgba(212, 0, 1, 0.08);
}

.accidentItem.success {
  color: #07C160;
  background: rgba(7, 193, 96, 0.12);
}